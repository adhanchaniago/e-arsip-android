<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSuratKeluarActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detailsuratkeluar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshDetailSuratKeluar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_detailsuratkeluar"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp"
                app:contentPadding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_detailsuratkeluar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text="No. Surat"
                                android:textColor="@color/ColorPrimaryText"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text=":"
                                android:textColor="@color/ColorPrimaryText" />

                            <TextView
                                android:id="@+id/txtDetailNoSuratKeluar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:textColor="@color/ColorPrimaryText" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text="Bagian"
                                android:textColor="@color/ColorPrimaryText"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text=":"
                                android:textColor="@color/ColorPrimaryText" />

                            <TextView
                                android:id="@+id/txtDetailBagianSuratKeluar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:textColor="@color/ColorPrimaryText" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text="Jenis Surat"
                                android:textColor="@color/ColorPrimaryText"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text=":"
                                android:textColor="@color/ColorPrimaryText" />

                            <TextView
                                android:id="@+id/txtDetailJenisSuratKeluar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:textColor="@color/ColorPrimaryText" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text="Tujuan Surat"
                                android:textColor="@color/ColorPrimaryText"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text=":"
                                android:textColor="@color/ColorPrimaryText" />

                            <TextView
                                android:id="@+id/txtDetailTujuanSuratKeluar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:textColor="@color/ColorPrimaryText" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text="Perihal"
                                android:textColor="@color/ColorPrimaryText"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text=":"
                                android:textColor="@color/ColorPrimaryText" />

                            <TextView
                                android:id="@+id/txtDetailPerihalSuratKeluar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:textColor="@color/ColorPrimaryText" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text="Isi Singkat"
                                android:textColor="@color/ColorPrimaryText"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text=":"
                                android:textColor="@color/ColorPrimaryText" />

                            <TextView
                                android:id="@+id/txtDetailIsiSuratKeluar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:textColor="@color/ColorPrimaryText" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text="Tanggal Surat"
                                android:textColor="@color/ColorPrimaryText"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text=":"
                                android:textColor="@color/ColorPrimaryText" />

                            <TextView
                                android:id="@+id/txtDetailTanggalSuratKeluar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:textColor="@color/ColorPrimaryText" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text="Tanggal Arsip"
                                android:textColor="@color/ColorPrimaryText"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text=":"
                                android:textColor="@color/ColorPrimaryText" />

                            <TextView
                                android:id="@+id/txtDetailTanggalArsipSuratKeluar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:textColor="@color/ColorPrimaryText" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="82dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text="Keterangan"
                                android:textColor="@color/ColorPrimaryText"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:text=":"
                                android:textColor="@color/ColorPrimaryText" />

                            <TextView
                                android:id="@+id/txtDetailKetSuratKeluar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/cellpadingdetailsuratmasuk"
                                android:textColor="@color/ColorPrimaryText" />
                        </TableRow>


                    </TableLayout>

                    <Button
                        android:id="@+id/buttonDownloadSuratMasuk"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download"
                        android:textAllCaps="false" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>