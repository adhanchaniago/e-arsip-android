<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewSuratMasuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/radiusCardView"
        app:cardElevation="@dimen/shadowCardView">

        <LinearLayout
            android:id="@+id/linearLayoutSuratMasuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txtTanggalArsip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Arsip"
                android:textAlignment="viewEnd"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/txtAsalSurat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asal Surat"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPerihal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perihal Surat"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>